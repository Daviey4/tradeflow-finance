# TradeFlow Environment Variables
# Copy this file to .env and fill in your values

# Django Secret Key - Generate a secure random key
SECRET_KEY=change-this-to-a-secure-random-string-at-least-50-characters

# Database URL (PostgreSQL recommended for production)
DATABASE_URL=postgres://user:password@localhost:5432/tradeflow

# Redis URL for caching and Celery
REDIS_URL=redis://localhost:6379/0

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# CSRF Trusted Origins (comma-separated, include https://)
CSRF_TRUSTED_ORIGINS=http://localhost,https://your-domain.com

# Debug mode (set to False in production)
DEBUG=False

# SSL Redirect (set to True when you have HTTPS)
SECURE_SSL_REDIRECT=False

# CORS Allowed Origins (for mobile app access)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-mobile-app.com

# Alpaca Trading API (optional - for real trading)
ALPACA_API_KEY=
ALPACA_SECRET_KEY=
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Sentry DSN (optional - for error tracking)
SENTRY_DSN=
